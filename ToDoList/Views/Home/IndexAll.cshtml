@model IEnumerable<ToDoList.Data.Post>

@{
    ViewData["Title"] = "Все посты";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<div class="d-flex align-items-center flex-column">
    <div class="d-flex justify-content-between align-items-center container-fluid" style="max-width: 45rem;">
        <h1 class="display-6">Все посты:</h1>
        <div class="d-flex" ">
            <div class="dropdown">
                <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                    Категория
                </button>
                <ul class="dropdown-menu">
                    @foreach (var category in ViewBag.Categories)
                    {
                        <li><a class="dropdown-item" href=@(("?Sort=" + category.ID))>@category.Name</a></li>
                    }
                </ul>
            </div>
            <a asp-controller="Home" asp-action="Index" href="/Home/Index" class="btn btn-primary ms-1">Последние посты➡️</a>
        </div>
    </div>
        @await Html.PartialAsync("_PostsListPartial", Model)
</div>

@section Scripts
{
    <script src="@Url.Content("~/js/Comments.js")"></script>
    @if (User.IsInRole("Administrator"))
    {
        <script src="@Url.Content("~/js/Admin.js")"></script>
    }
}

