@page
@model RegisterModel
@{
    ViewData["Title"] = "Регистрация";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <hr />
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password">Пароль</label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.ConfirmPassword">Подтвердите пароль</label>
            </div>
            <div class="form-floating mb-3">
                <p class="text-warning">- Пароль должен содержать специальный символ</p>
                <p class="text-warning">- Пароль должен содержать буквы</p>
                <p class="text-warning">- Пароль должен быть не менее 8 символов</p>
            </div>
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="form-floating mb-3">
                    <span class="text-danger">- Пароль должен содержать специальный символ</span>
                    <span class="text-danger">- Пароль должен содержать буквы</span>
                    <span class="text-danger">- Пароль должен содержать заглавную букву</span>
                    <span class="text-danger">- Пароль должен быть не менее 8 символов</span>
                </div>
            }
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Зарегистрироваться</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
